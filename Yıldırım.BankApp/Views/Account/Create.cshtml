@model UserListModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-6">
        <h3> Hesap eklenecek kişinin bilgileri</h3>
        <p>
            kullanıcının adı:<span asp-validation-for="@Model.Name"></span>
        </p>
        <p>
            kullanıcının Soyadı:<span asp-validation-for="@Model.Surname"></span> 
        </p>
        <p>
            kullanıcının Aktif Hesap Sayısı:<span asp-validation-for="@Model.Id"></span>
        </p>
        <form method="post" asp-action="Create" asp-controller="Account">
            
            <div class=" mb-3">
                <label class="form-label">Hesap Numarası:</label>
                <input type="number" class="form-control" name="AccountNumber" />

            </div>
            <div class=" mb-3">
                <label class="form-label">Bakiye:</label>
                <input type="number" class="form-control" name="Balance" />
            </div>
        <div class="mb-3">
            <input type="submit" value="Create" />
        </div>
        </form>

    </div>
  
</div>
